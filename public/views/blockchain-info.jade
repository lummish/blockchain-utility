head
   link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
   link(rel="stylesheet", href="css/highlight.css")
   link(rel="stylesheet", href="css/navbar.css")
   link(rel="stylesheet" href="/css/loader.css")
   script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
body
    include navbar
    div(class="container-fluid", id="loader")
    div(class="container-fluid animate-bottom")
        div(class="panel panel-default") 
            div(class="panel-heading") Blockchain Information
            div(class="panel-body")
                div(class="row")
                    div(class="info-title col-xs-4 col-md-2") Unconfirmed Transactions
                    div(class="info col-xs-12 col-md-8", id="unconfirmed")
                div(class="row")
                    div(class="info-title col-xs-4 col-md-2") Height
                    div(class="info col-xs-12 col-md-8", id="height")
        div(class="panel panel-default") 
            div(class="panel-heading") Most Recent Block Information
            div(class="panel-body")
                div(class="row")
                    div(class="info-title col-xs-4 col-md-2") Hash
                    div(class="info col-xs-12 col-md-8", id="hash")
                div(class="row")
                    div(class="info-title col-xs-4 col-md-2") Total (satoshis)
                    div(class="info col-xs-12 col-md-8", id="total")
                div(class="row")
                    div(class="info-title col-xs-4 col-md-2") Fees (satoshis)
                    div(class="info col-xs-12 col-md-8", id="fees")
        div
            button(class="btn btn-default btn-lrg", id="update") Update Info

    
